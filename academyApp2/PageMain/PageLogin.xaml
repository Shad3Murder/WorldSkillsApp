<Page x:Class="academyApp2.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:academyApp2.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Окно входа в аккаунт">

    <Grid>
        <StackPanel Margin="240,80,240,55.4">
            <Label Content="Логин:"/>
            <TextBox x:Name="txbLogin" Height="23" TextWrapping="Wrap" Text=""/>
            <Label Content="Пароль: "/>
            <PasswordBox x:Name="psbPassword"/>
            <StackPanel Orientation="Horizontal">
                <Button Background="LightGreen" Margin="0,5,4,5" Height="30" Width="150" Content="Войти" Click="Button_Click_1" />
                <Button x:Name="reg" Background="Orange" Margin="0,5,0,5" Height="30" Width="150" Content="Регистрация" Click="reg_Click" />
            </StackPanel>
        </StackPanel>
            
    </Grid>
</Page>
