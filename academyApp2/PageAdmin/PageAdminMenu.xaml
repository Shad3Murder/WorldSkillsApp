<Page x:Class="academyApp2.PageAdmin.PageAdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:academyApp2.PageAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="PageAdminMenu">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="200,80,200,55.4">
            <StackPanel>
                <Button Content="Добавить студента" Margin="5" Width="150" Height="40" />
                <Button Content="Добавить оценку" Margin="5" Width="150" Height="40" />
                <Button Content="Список студентов" Margin="5" Width="150" Height="40" />
            </StackPanel>
            <StackPanel>
                <Button Content="Редактировать оценки" Margin="5" Width="150" Height="40" />
                <Button Content="Удалить студента" Margin="5" Width="150" Height="40" />
                <Button Content="Выход" Margin="5" Height="40" Width="150" Click="Button_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
